generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

model Group {
  id          String    @id @default(cuid())
  name        String    @unique
  createdAt   DateTime  @default(now())
  established DateTime? @default(now())
  phone       String
  email       String?
  address     Address?
  days        Day[]
}

model Address {
  id        String  @id @default(cuid())
  city      String
  state     State
  street    String
  room      String?
  comments  String?
  latitude  Float
  longitude Float
  group     Group   @relation(fields: [groupId], references: [id])
  groupId   String  @unique
}

model Location {
  id     String                               @id @default(cuid())
  coords Unsupported("geometry(Point, 4326)")

  @@index([coords], name: "location_idx", type: Gist)
}

model Day {
  id       String    @id @default(cuid())
  name     WeekDay
  meetings Meeting[]
  group    Group     @relation(fields: [groupId], references: [id])
  groupId  String    @unique
}

model Meeting {
  id    String   @id @default(cuid())
  start DateTime
  end   DateTime
  topic Topic
  day   Day      @relation(fields: [dayId], references: [id])
  dayId String
}

enum WeekDay {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
}

enum Topic {
  Steps
  Traditions
  Speaker
  Free
}

enum State {
  Brestskaya
  Vitebskaya
  Gomelskaya
  Grodnenskaya
  Minskaya
  Mogilevskaya
}
